  Vcl.DBCtrls, Vcl.Grids, Vcl.DBGrids;

type
  TForm2 = class(TForm)
    Image1: TImage;
    SpeedButton1: TSpeedButton;
    DBEdit1: TDBEdit;
    DBEdit2: TDBEdit;
    DatePicker1: TDatePicker;
    DBEdit3: TDBEdit;
    ADOTable1: TADOTable;
    DataSource1: TDataSource;
    Panel1: TPanel;
    Panel2: TPanel;
    Panel3: TPanel;
    DBGrid1: TDBGrid;
